@model Tecdisa.OS.Application.ViewModel.SistemaViewModel

@{
    ViewBag.Title = "Editar";
}

<div class="d-inline-flex">
    <h1 class="display-4 pr-1" style="color: gray;">Editando: </h1>

    <p class="font-weight-light display-4 d-flex align-self-end"> @Model.Nome</p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-row">
            <div class="form-group col-3">
                <div class="d-inline-flex">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label mr-5 pr-5" })
                    <div class="form-row">
                        <div class="form-check d-flex align-self-md-center ml-5 pl-5">
                            @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "form-check-label" })
                            @Html.EditorFor(model => model.Ativo, new { htmlAttributes = new { @class = "form-check-input", @type = "checkbox" } })
                            @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <button class="btn btn-primary"><i class="fa fa-save"></i> Salvar</button>
            <a href="@Url.Action("Index", "Sistemas")" class="btn btn-warning"><i class="fa fa-arrow-left"></i> Voltar para a lista</a>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
