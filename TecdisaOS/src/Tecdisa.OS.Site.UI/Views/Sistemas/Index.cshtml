@model IEnumerable<Tecdisa.OS.Application.ViewModel.SistemaViewModel>

@{
    ViewBag.Title = "Início";
}

<div class="d-flex justify-content-between align-items-end mb-2">
    <h1 class="display-4">Sistemas</h1>

    <a href="@Url.Action("Create", "Sistemas")" role="button" class="btn btn-outline-dark"><i class="fa fa-laptop"></i> Novo Sistema</a>
</div>

<table class="table table-striped text-center table-sm">
    <tr>
        <th colspan="2"></th>

        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td colspan="2"></td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Sistemas", new { id=item.Id })" class="btn btn-outline-success"><i class="fa fa-edit"></i></a>
            <a href="@Url.Action("Details", "Sistemas", new { id=item.Id })" class="btn btn-outline-info"><i class="fa fa-list"></i></a>
            <a href="@Url.Action("Delete", "Sistemas", new { id=item.Id })" class="btn btn-outline-danger"><i class="fa fa-remove"></i></a>
        </td>
    </tr>
    }

</table>
