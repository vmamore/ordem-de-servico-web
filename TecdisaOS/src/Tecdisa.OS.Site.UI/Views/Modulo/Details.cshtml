@model Tecdisa.OS.Application.ViewModel.ModuloViewModel

@{
    ViewBag.Title = "Detalhes";
}


<div class="form-horizontal">
    <h4 class="display-4">Detalhes</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-row">
        <div class="form-group col-3">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @disabled="true" } })
        </div>

        <div class="form-group col-2">
            @Html.LabelFor(model => model.SistemaId, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.SistemaId, new SelectList(ViewBag.Sistemas, "Id", "Nome", ViewBag.SistemaSelecionado), new { @class = "form-control", @disabled="true" })
        </div>
        
    </div>
</div>

<p>
    <a href="@Url.Action("Edit","Modulo", new { id = Model.Id})" class="btn btn-outline-success"><i class="fa fa-edit"></i> Editar</a>
    <a href="@Url.Action("Index", "Modulo")" class="btn btn-outline-warning"><i class="fa fa-arrow-left"></i> Voltar para a lista</a>
</p>