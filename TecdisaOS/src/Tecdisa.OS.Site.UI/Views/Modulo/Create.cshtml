@model Tecdisa.OS.Application.ViewModel.ModuloViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="display-4">Novo Módulo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-row">
            <div class="form-group col-3">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-2">
                @Html.LabelFor(model => model.SistemaId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.SistemaId, new SelectList(ViewBag.Sistemas, "Id", "Nome"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col d-flex align-items-end">
                <input type="submit" value="Criar" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<a href="@Url.Action("Index", "Modulo")" class="btn btn-sm btn-outline-warning"><i class="fa fa-arrow-left"></i> Voltar para a lista</a>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
