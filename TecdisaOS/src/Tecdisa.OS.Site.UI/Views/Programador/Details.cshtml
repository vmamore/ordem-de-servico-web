@model Tecdisa.OS.Application.ViewModel.ProgramadorViewModel

@{
    ViewBag.Title = "Details";
}

<h2 class="display-4">Detalhes</h2>
<hr />
<div class="form-row">
    <div class="form-group col-2">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label label" })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
    </div>

    <div class="form-group col-4">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label label" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
    </div>
</div>


<p>
    <a href="@Url.Action("Edit","Programador", new { id = Model.Id})" class="btn btn-outline-success"><i class="fa fa-edit"></i> Editar</a>
    <a href="@Url.Action("Index", "Programador")" class="btn btn-outline-warning"><i class="fa fa-arrow-left"></i> Voltar para a lista</a>
</p>
