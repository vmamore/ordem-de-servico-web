@model IEnumerable<Tecdisa.OS.Application.ViewModel.OrdemDeServicoViewModel>

@{
    ViewBag.Title = "Ordem de Serviço";
}

<div class="d-flex justify-content-between align-items-end mb-2">
    <h1 class="display-4">Ordem de Serviço</h1>

    <a href="@Url.Action("Create", "OrdemDeServico")" role="button" class="btn btn-outline-secondary"><i class="fa fa-plus-square"></i> Novo Atendimento</a>
</div>

<table class="table table-sm table-bordered">
    <tr class="text-center">
        <th>
            @Html.DisplayNameFor(model => model.ClienteNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sistema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modulo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.ClienteNome)
            </td>
            <td id="#dataCadastro">
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sistema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modulo)
            </td>
            <td>
                <a href="@Url.Action("Edit", "OrdemDeServico", new { id=item.Id })" class="btn btn-outline-success"><i class="fa fa-edit"></i></a>
                <a href="@Url.Action("Details", "OrdemDeServico", new { id=item.Id })" class="btn btn-outline-info"><i class="fa fa-list"></i></a>
                <a href="@Url.Action("Delete", "OrdemDeServico", new { id=item.Id })" class="btn btn-outline-danger"><i class="fa fa-remove"></i></a>
            </td>
        </tr>
    }

</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item">
            @{
                if (ViewBag.PageNumber > 1)
                {
                    <a href="@Url.Action("Index","OrdemDeServico", new {pageNumber = ViewBag.PageNumber - 1 })" class="page-link">&laquo;</a>
                }
                else
                {
                    <a class="page-link disabled">&laquo;</a>
                }
            }
        </li>
        @{
            var atualPageNumber = ViewBag.PageNumber;
            for (var i = 1; i <= ViewBag.TotalCount; i++)
            {
                <li class="page-item @(atualPageNumber == i ? "active" : "")">
                    <a href="@Url.Action("Index","OrdemDeServico", new { pageNumber = i})" class="page-link">@i</a>
                </li>
            }
        }
        <li class="page-item">
            @{
                if (ViewBag.PageNumber < ViewBag.TotalCount)
                {
                    <a href="@Url.Action("Index","OrdemDeServico", new { pageNumber = ViewBag.PageNumber + 1})" class="page-link">&raquo;</a>
                }
                else
                {
                    <a class="page-link disabled">&raquo;</a>
                }
            }
        </li>
    </ul>
</nav>
